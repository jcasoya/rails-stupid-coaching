<div class="container">
  <h1 class="title">Stupid Coaching</h1>

  <div class="card-you">
    <p><%= @answer %></p>
    <br>
    <p class='you-coach'>- You</p>
  </div>

  <div class="card-answer">
    <% if params[:question].downcase == "i am going to work!" %>
      <p><%= "Great!" %></p>
    <% elsif params[:question].end_with?("?") %>
      <p><%= "Silly question, get dressed and go to work!" %></p>
    <% else %>
      <p><%= "I don't care, get dressed and go to work!" %></p>
    <% end %>
    <br>
    <p class='you-coach'>- Your coach</p>
  </div>

  <a href=""><%= link_to "Ask a new question", ask_path %></a>
</div>
